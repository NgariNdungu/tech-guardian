<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultTextStyle" parent="AppTheme">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="TitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DetailsTextStyle" parent="DefaultTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SectionTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/sectionColor</item>
    </style>
</resources>
